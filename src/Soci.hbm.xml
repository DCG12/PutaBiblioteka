<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <class name="Soci" table="SOCI">
        <id name="soci_id" type="int" column="soci_id">
            <generator class="increment" />
        </id>

        <property name="nom" column="nom" type="string"/>
        <property name="cognom" column="cognom" type="string"/>
        <property name="edat" column="edat" type="int"/>
        <property name="direccio" column="direccio" type="string"/>
        <property name="telefon" column="telefon" type="int"/>
    </class>
</hibernate-mapping>